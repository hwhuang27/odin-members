<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <% if (user) {%>
        <h1>Welcome back, <%= user.username %></h1>
        <a href="/board/<%= user.url %>/new">New Message</a>
        <a href="/board/<%= user.url %>/membership">Membership</a>
        <a href="/board/user/logout">Log Out</a>

      <% } else {%>
      <a href="/board/user/login">Log In</a>
      <a href="/board/user/signup">Sign Up</a>
    <% } %>
    <h1>
      <%= title %>
    </h1>
      <ul>
      <% messages.forEach(function(msg){%>
        <li style="font-weight: bold; font-size: 18px"><%= msg.user %></li>
        <li style="font-size: 16px; margin: 2px 0 6px;"><%= msg.text %></li>
        <li style="font-size: 14px; margin-bottom: 20px;"><%= msg.added %></li>
        <% }) %>
    </ul>
    
  </body>
</html>
